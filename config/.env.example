# Copy this file to .env and configure for your environment

# ===================================
# Application Settings
# ===================================
APP_NAME=SimpleCP
APP_VERSION=1.0.0
ENVIRONMENT=development  # development, staging, production

# ===================================
# API Server Configuration
# ===================================
API_HOST=127.0.0.1
API_PORT=8000
API_RELOAD=false  # Set to true for development auto-reload

# ===================================
# Clipboard Configuration
# ===================================
CLIPBOARD_CHECK_INTERVAL=1  # seconds
MAX_HISTORY_ITEMS=50
DISPLAY_COUNT=10
DISPLAY_LENGTH=50

# ===================================
# Data Storage
# ===================================
DATA_DIR=./data

# ===================================
# Sentry Crash Reporting & Monitoring
# ===================================
# Sign up at https://sentry.io to get a DSN
ENABLE_SENTRY=false
SENTRY_DSN=  # Your Sentry DSN here (e.g., https://xxx@xxx.ingest.sentry.io/xxx)
SENTRY_ENVIRONMENT=  # Auto-set from ENVIRONMENT if not specified
SENTRY_TRACES_SAMPLE_RATE=1.0  # 1.0 = 100% of transactions, 0.1 = 10%
SENTRY_PROFILES_SAMPLE_RATE=1.0  # Performance profiling sample rate

# ===================================
# Logging Configuration
# ===================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/simplecp.log
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5
LOG_JSON_FORMAT=false  # Set to true for JSON logs (recommended for production)

# ===================================
# Performance & Analytics
# ===================================
ENABLE_PERFORMANCE_TRACKING=true
ENABLE_USAGE_ANALYTICS=true

# ===================================
# Health Check
# ===================================
HEALTH_CHECK_ENABLED=true

# ===================================
# CORS Settings
# ===================================
# Comma-separated list of allowed origins (use * for all)
CORS_ORIGINS=*

# ===================================
# Production Recommendations
# ===================================
# For production deployments, consider:
# - ENVIRONMENT=production
# - LOG_JSON_FORMAT=true
# - SENTRY_TRACES_SAMPLE_RATE=0.1 (lower sample rate to reduce costs)
# - CORS_ORIGINS=https://yourdomain.com (restrict origins)
# - API_RELOAD=false
